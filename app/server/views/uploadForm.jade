// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //

#account-form-container
	form( method="post",enctype="multipart/form-data")#account-form.form-horizontal.well.span6
	
		h1
		p#sub1.subheading Please Upload Your Documents.
		hr
		fieldset
			#email-cg.control-group
				label.control-label(for='email-tf') File 
				.controls
					input#name-tf.input-xlarge(type='file', name='inputfile')
					input#name-tf.input-xlarge(type='hidden', name='userID',value=user._id)
					
			#email-cg.control-group
				label.control-label(for='email-tf') File Name
				.controls
					input#email-tf.input-xlarge(type='text', name='fileName')
			#clist-cg.control-group
				label.control-label(for='country-list') Comments
				.controls
					input#email-tf.input-xlarge(type='text', name='comments')

			.form-actions
				button(type='submit')#account-form-btn1.btn
				